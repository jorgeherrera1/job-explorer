---
// Layout.astro - Main layout component with all visual structure
import '../styles/global.css';
import Header from '../components/Header.astro';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Job Explorer</title>
		<ClientRouter />
	</head>
	<body>
		<!-- Fixed Header -->
		<Header />
		
		<!-- Search Controls Container - Floating white rounded container -->
		<div class="relative z-40 -mt-4 max-w-7xl mx-auto px-6">
			<div class="bg-white rounded-full shadow-xl px-8 py-4">
				<slot name="search-controls" />
			</div>
		</div>
		
		<!-- Main Grid Structure -->
		<main class="w-full pt-8 pb-8 h-[calc(100vh-172px)]">
			<div class="max-w-7xl mx-auto px-6 lg:px-8 h-full">
				<div class="bg-white rounded-4xl shadow-xl overflow-hidden h-full grid grid-rows-[auto_1fr]">
					<!-- Row 1: Gradient header for filter tags/results count -->
					<div class="bg-gradient-to-r from-indigo-900 via-blue-800 to-teal-500 relative flex items-start py-3 min-h-15">
						<slot name="filter-tags" />
					</div>
					
					<!-- Row 2: Two-column layout (job list | job details) -->
					<div class="grid grid-cols-[1fr_2fr] h-full min-h-0">
						<!-- Column 1: Job List -->
						<div class="border-r border-gray-200 flex flex-col h-full max-h-full min-h-0">
							<!-- Job List Header -->
							<div class="px-4 py-3 border-b border-gray-100">
								<slot name="job-list-header" />
							</div>
							<!-- Job List Content -->
							<div class="overflow-y-auto overflow-x-visible flex-1 px-1 min-h-0 max-h-full">
								<slot name="job-list" />
							</div>
						</div>
						
						<!-- Column 2: Job Details -->
						<div class="overflow-hidden flex flex-col h-full min-h-0">
							<slot name="job-details" />
						</div>
					</div>
				</div>
			</div>
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #F2F2F2;
	}
</style>
