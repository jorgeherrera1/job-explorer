    <!-- Left: Brand Logo/Title -->
    <div class="flex items-center -mt-4">
      <div class="flex items-center gap-3">
        <img 
          src="/logo/motivus-logo.png" 
          alt="Motivus Logo" 
          class="h-8 w-auto"
        />
